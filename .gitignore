.next/
out/
.next/analyze/
.next/cache/
.next/server/chunks/
.next/static/chunks/
.next/trace/

# General build directories
build/
dist/
esm/
cjs/

# SWC (Speedy Web Compiler)
.swc/

# TypeScript compilation
*.tsbuildinfo
.tscache/

# Webpack
.webpack/

