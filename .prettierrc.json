{
  "printWidth": 100,
  "singleQuote": true,
  "semi": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "lf",
  "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-prisma"],
  "overrides": [
    {
      "files": "*.prisma",
      "options": { "prismaSchemaIndentLevel": 2 }
    }
  ]
}
