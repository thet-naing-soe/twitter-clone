{
  // Display these as workspace recommendations
  "recommendations": [
    "dbaeumer.vscode-eslint",           // ESLint inline squiggles & fixes
    "esbenp.prettier-vscode",           // Format on save, matches Prettier config
    "prisma.prisma",                    // Prisma schema syntax highlighting
    "bradlc.vscode-tailwindcss",        // Tailwind IntelliSense & class sorting
    "GraphQL.vscode-graphql",           // tRPC & gql syntax highlighting (optional)
    "eamodio.gitlens",                  // Rich Git blame & history (helps reviews)
    "orta.vscode-jest",                 // Vitest/Jest test explorer
    "styled-components.vscode-styled-components", // Shadcn/ui tokens (optional)
    "github.vscode-pull-request-github",// Inline PR reviews
    "ms-azuretools.vscode-docker"       // For local Postgres in Docker
  ],

  // Extensions that will be suggested to uninstall if present
  "unwantedRecommendations": [
    "hookyqr.beautify",                 // Conflicts with Prettier
  ]
}
