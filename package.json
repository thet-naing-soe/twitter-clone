{
  "name": "twitter-clone",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:clean": "pnpm clean && pnpm dev",
    "build": "next build",
    "start": "next start",
    "preview": "pnpm build && pnpm start",
    "lint": "next lint && eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "lint:fix": "next lint --fix && eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:report": "eslint . --ext .ts,.tsx,.js,.jsx --format json --output-file reports/eslint-report.json || true",
    "lint:ci": "next lint && eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0 --format compact",
    "format": "prettier --write . --cache",
    "format:check": "prettier --check . --cache",
    "format:fix": "prettier --write . --cache --log-level warn",
    "type-check": "tsc --noEmit --incremental",
    "type-check:watch": "tsc --noEmit --incremental --watch",
    "type-check:ci": "tsc --noEmit --incremental --pretty",
    "test": "vitest",
    "test:unit": "vitest run --project=unit",
    "test:unit:watch": "vitest --project=unit --reporter=verbose",
    "test:unit:coverage": "vitest run --project=unit --coverage",
    "test:unit:ui": "vitest --project=unit --ui",
    "test:integration": "vitest run --project=integration",
    "test:integration:watch": "vitest --project=integration --reporter=verbose",
    "test:integration:coverage": "vitest run --project=integration --coverage",
    "test:all": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --no-coverage --reporter=verbose",
    "test:changed": "vitest related --coverage",
    "test:e2e": "dotenv -e .env.test -- playwright test",
    "test:e2e:headed": "dotenv -e .env.test -- playwright test --headed",
    "test:e2e:debug": "dotenv -e .env.test -- playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:ci": "dotenv -e .env.test -- playwright test",
    "db:generate": "prisma generate",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset --force",
    "db:seed": "tsx prisma/seeds/database.seed.ts",
    "db:seed:test": "NODE_ENV=test tsx prisma/seeds/database.seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force && pnpm db:seed",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:validate": "prisma validate",
    "db:format": "prisma format",
    "quality:check": "pnpm lint:ci && pnpm format:check && pnpm type-check:ci",
    "quality:fix": "pnpm format:fix && pnpm lint:fix && pnpm type-check",
    "quality:full": "pnpm quality:check && pnpm test:all",
    "ci:prepare": "pnpm install --frozen-lockfile && pnpm db:generate",
    "ci:quality": "pnpm quality:check",
    "ci:test:unit": "pnpm test:unit:coverage",
    "ci:test:integration": "pnpm test:integration:coverage",
    "ci:test:e2e": "pnpm test:e2e",
    "ci:build": "pnpm build",
    "ci:all": "pnpm ci:quality && pnpm test:all && pnpm ci:build",
    "clean": "rm -rf .next dist coverage playwright-report reports node_modules/.cache",
    "clean:deps": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "clean:all": "pnpm clean && pnpm clean:deps",
    "clean:build": "rm -rf .next dist",
    "clean:test": "rm -rf coverage playwright-report reports",
    "audit": "pnpm audit --audit-level moderate",
    "audit:fix": "pnpm audit --fix",
    "outdated": "pnpm outdated",
    "update:deps": "pnpm update --latest",
    "analyze": "cross-env ANALYZE=true pnpm build",
    "bundle:analyze": "pnpx @next/bundle-analyzer",
    "deps:check": "pnpx depcheck",
    "size": "pnpx size-limit",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "pre-push": "pnpm quality:check && pnpm test:changed",
    "release:dry": "semantic-release --dry-run",
    "release": "semantic-release",
    "docker:build": "docker build -t twitter-clone .",
    "docker:run": "docker run -p 3000:3000 twitter-clone"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^15.4.6",
    "@prisma/client": "^6.13.0",
    "next": "14.2.31",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.1",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.31",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "husky": "^8.0.3",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.4",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "prisma": "^6.13.0",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
